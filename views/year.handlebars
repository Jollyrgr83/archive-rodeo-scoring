<head>
  <title>Annual Lineworkers Rodeo Scoring | {{#each arrays}} {{title}} {{/each}}</title>
  {{> main/head-block}}
</head>

<body class="background mx-auto">

  {{#each arrays}}
  {{> main/title-block}}
  {{/each}}

  <main>

    <section class="container mx-auto text-center">

      <p class="subtitle mx-auto">Select Competition Year</p>
      <hr class="line large mx-auto">

      <select id="year-select" class="full mx-auto">
        {{#each arrays}}
        {{#each years}}
        {{> year/year-block}}
        {{/each}}
        {{/each}}
      </select>

    </section>

    <section id="dynamic"></section>

    <section class="container mx-auto text-center">

      <p class="subtitle mx-auto">Add a Competition Tier</p>
      <hr class="line large mx-auto">

      <div class="row mx-auto text-center row-container">
        <select id="tier-select" class="large mx-auto">
          {{#each arrays}}
            {{#each tiers}}
              {{> year/tier-block}}
            {{/each}}
          {{/each}}
        </select>
        <div id="year-add-tier-button" class="square-button blue mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
            </svg>
        </div>
      </div>

    </section>

  </main>

  {{> main/script-block}}

  <!-- view page js script -->
  <script type="text/javascript" src="/assets/js/year.js"></script>

</body>